<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="18dp" />
            <size android:height="36dp" />
            <solid android:color="@color/sky" />
            <stroke android:width="1dp" android:color="@color/sky" />
            <padding android:left="15dp" android:right="15dp" />
        </shape>
    </item>

    <item android:state_checked="false" android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="18dp" />
            <size android:height="36dp" />
            <solid android:color="@color/white" />
            <stroke android:width="1dp" android:color="@color/light_gray" />
            <padding android:left="15dp" android:right="15dp" />
        </shape>
    </item>
</selector>